<h1>Listing Connections</h1>

<table class='table table-bordered table-striped table-condensed'>
  <tr>
    <th>Name</th>
    <th>Adapter</th>
    <th>Host</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @connections.each do |connection| %>
      <tr>
        <td><%= connection.name %></td>
        <td><%= connection.adapter %></td>
        <td><%= connection.host %></td>
        <td class='icon_16'><%= link_to image_tag("MagnifyingGlass_16x16.png", :border => 0, :size => '16x16'), connection %></td>
        <td class='icon_16'><%= link_to image_tag("edit_32x32.png", :border => 0, :size => '16x16'), edit_connection_path(connection) %></td>
        <td class='icon_16'><%= link_to image_tag("trash_32x32.png", :border => 0, :size => '16x16'), connection, method: :delete, data: {confirm: 'Are you are you want to delete <'+connection.name+'>?'} %></td>
      </tr>
  <% end %>
</table>

<br/>

<%= button_to 'New Connection', new_connection_path, :method => 'get', :class => 'btn btn-primary' %>
